# Controls files that are uploaded to Google Cloud Build/Run when using --source
# Syntax matches .gitignore

# Exclude common large/ephemeral folders
node_modules/
.next/
.vercel/
coverage/
.nyc_output/

# VCS and local env
.git/
.gitignore
.env*

# Logs
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*
.pnpm-debug.log*

# DO NOT exclude these build-critical files
!package.json
!package-lock.json
!Dockerfile
!.dockerignore
!next.config.js
!tsconfig.json
!postcss.config.js
!tailwind.config.js
!eslint.config.mjs

# Keep application source
app/**
public/**
