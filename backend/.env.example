# Backend Environment Variables
# Copy this file to .env and fill in your values

# ===========================
# REQUIRED: Google Cloud
# ===========================
# Google Cloud Project ID
GOOGLE_CLOUD_PROJECT=demystifier-ai

# Service Port (Cloud Run provides this automatically)
PORT=8080

# ===========================
# REQUIRED: Authentication
# ===========================
# JWT Secret Key - CHANGE THIS IN PRODUCTION!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-change-in-production

# ===========================
# REQUIRED: Google Cloud Storage
# ===========================
# Bucket for user data and documents
USERS_BUCKET=demystifier-ai_cloudbuild
USERS_PREFIX=users

# ===========================
# REQUIRED: Vertex AI / Gemini
# ===========================
# These are configured via Google Cloud authentication
# Ensure your service account has Vertex AI User role
# No additional environment variables needed

# ===========================
# REQUIRED: Discovery Engine (RAG)
# ===========================
# RAG Engine Configuration
RAG_ENGINE_PROJECT=demystifier-ai
RAG_ENGINE_LOCATION=global
RAG_ENGINE_ID=synapseragengine_1758347548138
RAG_SERVING_CONFIG_NAME=default_config

# Optional: Data Store ID (for document reindexing)
RAG_DATA_STORE_ID=

# ===========================
# OPTIONAL: RAG Filtering
# ===========================
# Enable user-level filtering (improves performance)
# RAG_FILTER_METADATA=user_id

# Document-level filtering field
RAG_FILTER_DOCUMENT_ID=document_id

# ===========================
# OPTIONAL: RAG Behavior
# ===========================
# Enable sample snippets when no results found
RAG_ENABLE_FALLBACK=true

# Allow mock data when Discovery Engine unavailable
RAG_ALLOW_MOCK=false

# ===========================
# OPTIONAL: Security
# ===========================
# Enforce strict user isolation
STRICT_USER_ISOLATION=true

# Backend URL (for internal references)
BACKEND_URL=https://legal-backend-144935064473.asia-south1.run.app

# ===========================
# OPTIONAL: Development
# ===========================
# Local user database file (for testing without GCS)
# USERS_LOCAL_FILE=./users_db.json
